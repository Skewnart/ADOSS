<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525"
        DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Grid>
        <ListBox Margin="0, 0, 0, 25" ItemsSource="{Binding InfosList}"/>
        <TextBox Name="textboxAdd" Height="25" Width="200" VerticalAlignment="Bottom" HorizontalAlignment="Left" VerticalContentAlignment="Center" Text="{Binding Address}"/>
        <TextBox Height="25" VerticalAlignment="Bottom" Margin="200, 0, 0, 0" VerticalContentAlignment="Center" Text="{Binding Message}" KeyUp="TextBox_KeyUp"/>
    </Grid>
</Window>
